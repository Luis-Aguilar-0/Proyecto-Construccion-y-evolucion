<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="100.0" styleClass="cart-item-pane-enhanced" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uacm.CartItemController">
   <children>
      <ImageView fx:id="imgGameCover" fitHeight="90.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="5.0" AnchorPane.bottomAnchor="5.0" />
      <VBox spacing="5.0" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="150.0">
         <children>
            <Label fx:id="lblGameName" styleClass="cart-game-name-label-enhanced" text="Nombre del Juego" wrapText="true">
               <font>
                  <Font name="Yu Gothic UI Semibold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="lblGameDeveloper" styleClass="cart-game-developer-label" text="Desarrollador">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Label fx:id="lblGamePrice" styleClass="cart-game-price-label-enhanced" text="\$0.00" AnchorPane.rightAnchor="160.0" AnchorPane.topAnchor="15.0">
         <font>
            <Font name="Yu Gothic UI Semibold" size="20.0" />
         </font>
      </Label>
      <Button fx:id="btnRemoveItem" onAction="#handleRemoveItem" styleClass="cart-remove-button-enhanced" text="ELIMINAR" AnchorPane.rightAnchor="20.0" AnchorPane.centerYAnchor="0.0" />
   </children>
</AnchorPane>