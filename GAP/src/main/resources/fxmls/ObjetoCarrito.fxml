<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="120.0" prefWidth="580.0" styleClass="cart-item-pane-enhanced" stylesheets="@../styles/Carrito.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uacm.ObjetoCarritoController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="560.0" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <ImageView fx:id="imgGameCover" fitHeight="90.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="100.0" prefWidth="280.0" spacing="5.0">
               <children>
                  <Label fx:id="lblNombreJuego" styleClass="cart-game-name-label-enhanced" text="Nombre del Juego Extenso para Pruebas">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblPrecio" styleClass="cart-game-developer-label" text="Precio" />
                  <Label fx:id="lblPrecioJuegoMXN" styleClass="cart-game-price-label-enhanced" text="\$0.00 MXN">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblPrecioJuegoAC" styleClass="cart-game-price-label-enhanced" text="0 AC">
                     <VBox.margin>
                        <Insets top="2.0" />
                     </VBox.margin>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </VBox>
            <Button fx:id="btnEliminarJuego" mnemonicParsing="false" onAction="#handleRemoveItem" styleClass="cart-remove-button-enhanced" text="Eliminar" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</AnchorPane>
